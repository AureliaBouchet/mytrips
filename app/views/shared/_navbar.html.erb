        <% end %>
      </div>
      <div class="navbar-item">
        <%= link_to  do %>
          <i class="fas fa-bookmark"></i>
          <p>Enregistrements</p>
        <% end %>
      </div>
      <div class="navbar-item">
        <%= link_to  user_path(current_user) do %>
