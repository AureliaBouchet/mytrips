<div class="form-container">
  <div class="newtrip-form">
    <%= simple_form_for [@step, @restaurant] do |f| %>
      <%= f.input :address, label: 'Restaurant' %>
      <%= f.input :name, label: 'Commentaire' %>
      <%= f.input :price, label: 'Prix' %>
      <%= f.input :love_tag, label: "Coup de coeur"%>

      <%= f.submit "Ajouter", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
