<div class="title">
  <h1>Mes voyages</h1>
</div>

<div class="cards">
  <% @trips.each do |trip| %>
    <% if trip.photo.blank? %>
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.9), rgba(0,0,0,0.5)),
         url('images/trip.jpg')">
    <% else %>
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path trip.photo, height: 300, width: 400, crop: :fill %>')">
    <% end %>
      <div class="card-title">
        <h3> <%= trip.title %></h3>
        <%nb_steps = Step.where(trip_id: trip.id).length %>
        <p class="blank-steps"> <i class="fas fa-project-diagram"></i> <%= pluralize nb_steps, "Ã©tape" %></p>
      </div>

      <div class="card-dates">
        <p> Du
          <%= trip.date_begin.strftime("%-d %b %y") %> au
          <%= trip.date_end.strftime("%-d %b %y") %>
        </p>
      </div>
      <div class="edit-links">

      <%= link_to trip_path(trip.id),  method: :delete,
                          data: { confirm: "Are you sure?" } do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
    </div>
      <%= link_to "", trip_path(trip), class: "card-show-link" %>
    </div>
  <% end %>
<div class="card card-add-trip">
  <i class="fas fa-plus-circle"></i>
  <p> <%= link_to "", new_trip_path, class: "card-show-link"  %></p>
</div>
</div>

