<h1>Modifier l'étape</h1>

<div class="form-container">
<div class="newtrip-form">
  <%= simple_form_for [@step] do |f| %>
    <%= f.input :address, label: 'Localisation' %>

    <div class="date-form">
      <%= f.input :date_begin, as: :date, label: 'Date début' %>
      <%= f.input :date_end, label: 'Date fin'%>
    </div>

    <%= f.input :comment, label: "Description de l'étape", as: :text%>
    <%= f.input :love_tag, label: "Coup de coeur"%>

    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>

    <%= f.submit "Modifier l'étape", class: "btn btn-primary" %>
  <% end %>
</div>
</div>
